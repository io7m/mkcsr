<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

  <appender
    name="STDERR"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>mkcsr: %logger{0}: %level: %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>

  <root level="TRACE">
    <appender-ref ref="STDERR"/>
  </root>

</configuration>